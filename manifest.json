{
  "name": "Hayyim Dictionary Lookup",
  "description": "Dictionary utility for looking up Persian words in Hayyim Persian Dictionary.",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "/images/icon128.png",
    "48": "/images/icon128.png",
    "128": "/images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["contextMenus"],
  "action": {
    "default_popup": "popup.html"
  }
}
